div(class="modal", id="vinter-modal-edit-say")
    div(class="modal-content")
        span(class="close", id="close-edit-say") &times;
        div(class="editor-field")
            label(for="utterance") Utterance:
            input(type="text", id="edit-say-utterance", class="flow-field utt")
            label(for="sleep") Sleep:
            input(type="text", id="edit-say-sleep", class="flow-field")
        div(class="vinter-btn-confirm")
            button(type="button", id="vinter-btn-confirm-edit-say", class="btn-create") EDIT
            button(type="button", id="vinter-btn-confirm-delete-say", class="btn-delete") DELETE