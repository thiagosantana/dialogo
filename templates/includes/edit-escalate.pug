div(class="modal", id="vinter-modal-edit-escalate")
    div(class="modal-content")
        span(class="close", id="close-edit-escalate") &times;
        div(class="editor-field")
            label(for="utterance") Utterance:
            input(type="text", id="edit-escalate-utterance", class="flow-field utt")
            label(for="sleep") Sleep:
            input(type="text", id="edit-escalate-sleep", class="flow-field")
        div(class="vinter-btn-confirm")
            button(type="button", id="vinter-btn-confirm-edit-escalate", class="btn-create") EDIT
            button(type="button", id="vinter-btn-confirm-delete-escalate", class="btn-delete") DELETE